<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 ">
      <div class="panel panel-default">
        <div class="panel-heading center">
          <h2>Sign up for Trekr</h2>
        </div>
        <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field form-group">
            <%= f.label :email, class: "form-text-header" %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :password, class: "form-text-header" %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation, class: "form-text-header" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :name, "Your name", class: "form-text-header" %><br />
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :home_city, "Your Home City", class: "form-text-header" %><br/ >
            <%= f.text_field :home_city, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :avatar, "Your Avatar", class: "form-text-header" %><br />
            <%= f.file_field :avatar %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary form-control" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
