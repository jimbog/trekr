<h1>TRIPS SHOW PAGE</h1>

 <%= image_tag(@trip.avatar, :size => "200x200") %><br>
<%= @trip.name %><br>
<%= @trip.destination %><br>
<%= @trip.start_date %><br>
<%= @trip.end_date %><br>
<% @trip.users.each do |u| %>
    <%= u.name %>
<% end %>

<h2>Add an activity</h2>

<h3>Your trips:</h3>
<div>
  <% current_user.trips.each do |a| %>
      <li>
       <%= image_tag(a.avatar, :size => "80x80") %><br>
        
        <%= a.name  %><br>
        <%= a.start_date  %><br>
        <%= a.end_date  %><br>
        <%= a.destination  %><br>
        <% if user_signed_in? %>
			<%= link_to "Edit", trip_path(a.id)  %><br>
		<% end %>

      </li><br>
  <% end %>

</div>




<%= link_to "Back", trips_path %>
