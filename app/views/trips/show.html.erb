<h1>TRIPS SHOW PAGE</h1>

<%= @trip.name %><br>
<%= @trip.destination %><br>
<%= @trip.start_date %><br>
<%= @trip.end_date %><br>

<h2>Add friend to trip</h2>
<%= form_for @trip do |c| %>

    <div>
      <%= c.label :name, "Email" %>
      <%= c.text_field :name %>
    </div>

    <div>
      <%= c.submit "Add Friend" %>
    </div>

<% end %>

<%= link_to "Back", trips_path %>
<%= link_to "Edit", edit_trip_path %>
