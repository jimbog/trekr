<h1>Create New Activity</h1>

<p>Let the fun begin.  Add your activities below!</p>

<%= form_for @activity do |a| %>

<div>
	<%= a.label :category, "Category:" %>
	<%= a.text_field :category %>
</div>

<div>
	<%= a.label :name, "Name:" %>
	<%= a.text_field :name %>
</div>

<div>
	<%= a.label :address, "Address:" %>
	<%= a.text_field :address %>
</div>

<div>
	<%= a.label :date_start, "Start Date:" %>
	<%= a.date_select :date_start %>
</div>

<div>
	<%= a.label :date_end, "End Date:" %>
	<%= a.date_select :date_end %>
</div>

<div>
	<%= a.label :description, "Description:" %>
	<%= a.text_field :description %>
</div>

<div>
	<%= a.label :cost, "Cost:" %>
	<%= a.text_field :cost %>
</div>

<div>
	<%= a.label :trips_id, "Trips ID" %>
	<%= a.text_field :trips_id %>
</div>

<div>
	<%= a.label :users_id, "Trips ID" %>
	<%= a.text_field :users_id %>
</div>

<%= a.submit "Submit" %>

<% end %>


<%= link_to "Back", activities_path %>






